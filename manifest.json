{
    "name": "Amazon vs Rakuten",
    "description": "Displays rakuten prices for the same item in a popup window",
    "version": "1.0",
    "manifest_version":3,
    "background": {
        "service_worker":"background.js"
    },
    "permissions": ["storage", "activeTab", "scripting","webRequest","webNavigation"],

    "action":{
        
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
          }
    },
    "options_page": "options.html",
    "host_permissions":[
            "https://*.rakuten.com/"
    ]
}